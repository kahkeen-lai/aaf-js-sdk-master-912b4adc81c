{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "rootDir": "src",
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "noStrictGenericChecks": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": ["dom", "es5", "scripthost", "es2015", "es2016"]
    },
    "typedocOptions": {
        "exclude": "**/*+(index|.spec|.e2e).ts",
        "module": "ES2015",
        "excludePrivate": true,
        "excludeExternals": true,
        "excludeNotExported": true,
        "includeVersion": true,
        "stripInternal": "true",
        "target": "ES2015",
        "entryPoint": "./src/xaaf-js-sdk",
        "includeDeclarations": false,
        "mode": "file",
        "name": "Xaaf - Core JS SDK",
        "readme": "README.md",
        "out": "../../../docs/internal/sdk/core/xaaf-js-sdk",
        "theme": "markdown"
    },
    "exclude": ["node_modules", "dist", "**/*.[Ss]pec.ts", "lib", "integration"]
}
