{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "jsx": "react",
        "skipLibCheck": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "rootDir": "src",
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "noStrictGenericChecks": true,
        "downlevelIteration": true,

        "lib": ["es5", "scripthost", "es2015", "es2016"]
    },
    "typedocOptions": {
        "exclude": "**/*+(index|.spec|.e2e).ts",
        "module": "ES2015",
        "excludePrivate": true,
        "excludeExternals": true,
        "excludeNotExported": true,
        "includeVersion": true,
        "stripInternal": true,
        "target": "ES2015",
        "includeDeclarations": false,
        "mode": "file",
        "name": "Xaaf - Youi SDK",
        "readme": "README.md",
        "out": "../../../docs/internal/sdk/platforms/youi",
        "theme": "markdown"
    },
    "exclude": ["node_modules", "**/*.[Ss]pec.ts", "lib", "dist", "integration"]
}
