{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "compiled",
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowJs": true,
        "rootDir": ".",
        "esModuleInterop": true,
        "paths": {
            "*": [ "./*" ],
            "src/*": ["./test/*"]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node", 
            "@wdio/sync",
            "@wdio/mocha-framework"
        ]
    },
    "include": [
      "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "compiled"
    ]
  }