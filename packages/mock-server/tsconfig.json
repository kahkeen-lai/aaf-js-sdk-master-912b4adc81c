{
    "compileOnSave": false,
    "exclude": [
        "api",
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}
