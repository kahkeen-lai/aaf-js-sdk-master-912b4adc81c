{
    "compilerOptions": {
        "noEmit": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "rootDir": "src",
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "module": "ES2015",        
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "noStrictGenericChecks": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": ["dom", "es5", "scripthost", "es2015", "es2016"]
    },
    "exclude": ["node_modules", "dist", "**/*.[Ss]pec.ts", "lib", "integration"]
}